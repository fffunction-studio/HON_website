.list.full-transitions {
  .list-item {
	  transition: all $medium ease-in-out;
  }
}

@screen lg {
  .loose {
    .home-list {
      .list-item {
        &:nth-child(1) {
          margin-top: calc(75% - 96px);
        }
        &:nth-child(3) {
          margin-top: calc(75% - 96px);
        }
        &.col {
          padding-left: 32px;
          padding-right: 32px;
        }
      }
    }
  }
}

/*  */

.filter {
  &-toggle {
    transition: $medium ease;
    opacity: 1;
    &.disabled {
      opacity: 0;
    }
  }

  &-overlay {
    height: 100vh;
    top: -100vh;
    left: 0;
    transition: $medium ease-in-out;

    li {
      opacity: 0;
      transition: $medium ease-in-out;
    }

    &.active {
      top: 0;

      li {
        opacity: 1;
      }
    }
  }

  &-label {
    @apply text-xs mb-2 relative;
  }

  &-list {
    @apply text-base mb-6;
    cursor: pointer;

    li {
      @apply my-2;
      &:hover,
      &.active:not(:first-child) {
        text-decoration: line-through;
      }
    }
  }

  /* &-left {
