/* purgecss start ignore */
@keyframes dotFrames {
  0% {
    opacity: 0.25;
    transform: scale(1)
  }
  50% {
    opacity: 0.75;
    transform: scale(0.5)
  }
  100% {
    opacity: 0.25;
    transform: scale(1)
  }
}

.archive-app {
  .loader {
    @apply fixed inset-0 bg-white z-10 flex items-center justify-center opacity-0;
    transition: opacity $medium ease;

    .loading-dots {
      @apply flex w-full h-2 justify-center;

      .dot {
        @apply rounded-full w-2 h-2 bg-black mx-4;
        animation: dotFrames $medium linear infinite;
        &:nth-child(1) {
          animation-delay: 100ms;
        }
        &:nth-child(2) {
          animation-delay: 200ms;
        }
        &:nth-child(3) {
          animation-delay: 300ms;
        }
        &:nth-child(4) {
          animation-delay: 400ms;
        }
      }
    }
  }
  .mainframe {
    @apply relative z-20;
    transition: opacity $medium ease;
  }

  &.is-loading{
    .loader { 
      @apply opacity-100;
    }
    .mainframe {
      @apply opacity-0;
    }
  }
}

button,
.button {
    @apply px-4 py-2 bg-gray-400 mt-4;
    transition: $short easeOutCirc;
    
    &:hover {
        @apply shadow-lg;
        transform: translateY(-0.125em);
    }

    &:focus {
        @apply bg-gray-600;
        outline: none;
        box-shadow: none;
        transform: translateY(0);
    }
}

table {
  tr:not(:last-child) {
    @apply border-b border-gray-300
  }
}

.background-placeholder {
  z-index: -2;
  background-size: cover;
  background-position: center;
}

.background-swapper {
  z-index: -1;
  & > .to,
  & > .from {
    @apply absolute w-full h-full;
    background-size: cover;
    background-position: center;
  }
}

/*  */
.list {
  position: relative;
  opacity: 1;
  transform: translateY(0);
  transition: opacity 400ms ease, transform 400ms ease;

  &.fade {
    opacity: 0;
    transform: translateY(40px);
  }
}

