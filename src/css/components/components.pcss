  }
}

@screen lg {
  .filter {
    &-container {
      transition: $medium ease;
      &.opacity {
        opacity: 0;
      }
    }
    &-label {
      @apply text-xs mb-4;
    }

    &-list {
      @apply text-sm mb-0;

      li {
        @apply my-4;
        &:first-child {
          @apply mt-6;
        }
      }
    }
  }
}
/* purgecss end ignore */