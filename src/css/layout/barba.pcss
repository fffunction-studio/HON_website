/* purgecss start ignore */
/* fade and slide transition active states (same for leave and enter) */
.barba-fade-enter-active,
.barba-right-enter-active,
.barba-left-enter-active {
  transition: $medium easeInOutCubic;
}
.barba-fade-leave-active,
.barba-right-leave-active,
.barba-left-leave-active {
  transition: $short easeInOutCubic;
}

/* fade transition states */
.barba-fade-leave,
.barba-fade-enter-to {
  opacity: 1;
}

.barba-fade-enter,
.barba-fade-leave-to {
  transform: translateY(40px);
  opacity: 0;
}

/* slide transition states */
.barba-right-leave {
  transform: translateX(0);
  opacity: 1;

}
.barba-right-enter-to {
  transform: translateX(0);
  opacity: 1;
}
.barba-right-leave-to {
  transform: translateY(40px);
  opacity: 0;
}
.barba-right-enter {
  transform: translateX(50vw);
  opacity: 0;
}

.barba-left-leave {
  transform: translateX(0);
  opacity: 1;

}
.barba-left-enter-to {
  transform: translateX(0);
  opacity: 1;
}
.barba-left-leave-to {
  transform: translateY(40px);
  opacity: 0;
}
.barba-left-enter {
  transform: translateX(-50vw);
  opacity: 0;
}


