.barba-wipe {
  @apply fixed w-full h-screen inset-x-0 bg-white z-40;
  top: 100vh;
  transition: top $medium easeInOutCirc;
}

.barba-leave {
  .barba-wipe {
    top: 0;
  }
}

.barba-enter {
  .barba-wipe {
    top: 100vh;
  }
}

/* purgecss end ignore */