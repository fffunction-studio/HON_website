{% set footerWidget = craft.entries().section("widgets").slug("footer").one() %}

<div id="footer" class="footer-wrapper blur-wrapper relative z-40 text-sm ">

  <footer class="section footer-main">
    <div class="container">


        {% block footer %}

      {% if footerWidget is defined %}
          <div class="row">
            <div class="col w-full mb-10 md:w-6/12 lg:w-2/12 lg:mr-1/12 lg:mb-0">
              <p>{{ footerWidget.address|nl2br }}</p>
            </div>
            <div class="col w-full mb-10 md:w-6/12 lg:w-2/12 lg:mr-1/12 lg:mb-0">
              <p>{{ footerWidget.workingAt|nl2br }}</p>
            </div>
            <div class="col w-full mb-10 md:w-6/12 lg:w-2/12 lg:mr-1/12 lg:mb-0">
              <p>{{ footerWidget.services|nl2br }}</p>
            </div>
            <div class="col w-full mb-10 md:w-6/12 lg:w-2/12 lg:mr-1/12 lg:mb-0">
              <p>{{ footerWidget.social|nl2br }}</p>
            </div>
          </div>
      {% endif %}

<div class="block lg:flex justify-between mt-10 lg:mt-16 opacity-50">
  <p>Copyright &copy; 2019 studio hongjie yang.</p>
  <p>website designed and built by <a target="_blank" href="https://fffunction.studio">fffunction.studio</a></p>
</div>


        {% endblock %}


    </div>
  </footer>

</div>